@model IEnumerable<Estacionamento.Models.Veiculo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PLACA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HORAENT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HORASAI)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PLACA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HORAENT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HORASAI)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>

<th>Ações</th>

<tbody>
@foreach(var v in Model)
{
    <tr>
        <td>@v.PLACA</td>
        <td>@v.HORAENT.ToString("g")</td>
        <td>@(v.HORASAI.HasValue ? v.HORASAI.Value.ToString("g") : "-")</td>
        <td>
            @if (!v.HORASAI.HasValue)
            {
                <a asp-action="Saida" asp-route="@v.ID" class="btn btn-warning btn-sm">Registrar Saída</a>
            }
        </td>
    </tr>
}
</tbody>