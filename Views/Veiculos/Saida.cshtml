@model Estacionamento.Models.Veiculo

@{
    ViewData["Title"] = "Saída de Veículo";
}

<h2>Registrar Saída</h2>

<div>
    <p><strong>Placa:</strong> @Model.PLACA</p>
    <p><strong>Hora de Entrada:</strong> @Model.HORAENT.ToString("g")</p>
</div>

<form asp-action="Saida" method="post">
    <input type="hidden" asp-for="ID"/>
    <button type="submit" class="btn-danger">Registrar Saída</button>
</form>